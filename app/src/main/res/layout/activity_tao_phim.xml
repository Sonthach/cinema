<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaoPhim"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tbtaophim"
        app:title="Tạo Phim"
        android:background="#4DB151">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgposter2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/filmnon"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btnChonAnh2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Chọn ảnh"
                android:textColor="#fff"
                android:background="@drawable/button_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:textColorHint="?attr/colorPrimary"
                android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtTenPhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Tên phim"
              />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:outlineSpotShadowColor="#000"
            android:outlineAmbientShadowColor="#000">

            <Spinner
                android:id="@+id/spinnerOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                >

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColorHint="?attr/colorPrimary"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_background">
            <TextView
                android:id="@+id/edtNgayPhatHanh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày phát hành"
                android:textSize="20dp"
                android:textColor="#000"
                />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:textColorHint="?attr/colorPrimary"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Mô tả"
                android:inputType="text|textMultiLine"
                />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar_taophim"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTaoPhim"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Tạo phim"
                android:textColor="#fff"
                android:background="@drawable/button_background"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>