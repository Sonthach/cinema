<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaoPhimActivity"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tbtaophim"
        app:title="Tạo Phim"
        android:background="#4DB151">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgposter2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/filmnon"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btnChonAnh2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Chọn ảnh"
                android:textColor="#fff"
                android:background="@drawable/button_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên phim"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:id="@+id/edtTenPhim"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:hint="Tên phim"
                android:background="@drawable/edittext_background"
              />

        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại phim"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"/>
            <Spinner
                android:id="@+id/spinnerOption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:scrollbarSize="20dp"
                >
            </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày phát hành"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/edtNgayPhatHanh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày phát hành"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"/>
            <EditText
                android:id="@+id/edtMoTa"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:inputType="text|textMultiLine"
                android:background="@drawable/edittext_background"
                android:hint="Nội dung mô tả"
                />

        </LinearLayout>
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar_taophim"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnTaoPhim"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Tạo phim"
                android:textColor="#fff"
                android:background="@drawable/button_background"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>