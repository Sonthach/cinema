<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUser">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/tbuser"
        app:title="Hồ sơ"></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="55dp"
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad">
        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_border"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imgposter"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatardefault"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_margin="9dp"
                android:padding="3dp"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUser"
            android:layout_centerHorizontal="true"
            android:text="Sơn Thạch"
            android:id="@+id/txtnameuser"
            android:textSize="32dp"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="15sp"
            />
    </RelativeLayout>
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/rellay1">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:orientation="vertical"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Email"
               android:textColor="@color/headings"
               android:textSize="13sp"
               />
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txtemailuser"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="nhumlesonthach@gmail.com"
                   android:textSize="18sp"
                   android:textColor="#000000"
                   />
                   <TextView
                       android:id="@+id/txtresetemail"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Reset"
                       android:textSize="18sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="270dp"
                       />
               </RelativeLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="15dp"
                   android:background="@color/grey"/>
           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Mật khẩu"
                   android:textColor="@color/headings"
                   android:textSize="13sp"
                   />

           </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/txtmatkhauuser"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1234567890"
                       android:textSize="18sp"
                       android:textColor="#000000"
                       />
                      <TextView
                          android:id="@+id/txtdoimatkhau"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Đổi mật khẩu"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          android:layout_marginLeft="210dp"
                          />
                  </RelativeLayout>
               </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="15dp"
               android:background="@color/grey"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_marginTop="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Danh sách phim"
                       android:textSize="18sp"
                       android:textColor="#000000"
                       />
               </RelativeLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="15dp"
                   android:background="@color/grey"/>
           </LinearLayout>
           </LinearLayout>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="250dp"
           android:text="Đăng xuất"
           android:layout_marginLeft="60dp"
           android:layout_gravity="center"
           android:background="@drawable/button_background"
           android:id="@+id/btndangxuat"
           android:textAlignment="center"
           android:gravity="center"/>


   </RelativeLayout>
</RelativeLayout>