<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:textColorHint="?attr/colorPrimary"
            android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtmatkhaucu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Mật khẩu cũ"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:textColorHint="?attr/colorPrimary"
            android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtmatkhaumoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Mật khẩu mới"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:textColorHint="?attr/colorPrimary"
            android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtconfirmmatkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Xác nhận mật khẩu mới"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnxacnhandoimatkhau"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Xác nhận"
            android:layout_marginTop="00dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btnhuy"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:background="@drawable/button_background"
            android:layout_marginLeft="30dp"/>
        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>