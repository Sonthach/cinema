<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:textColorHint="?attr/colorPrimary"
            android:background="@drawable/edittext_background"
            app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/edtmatkhaucu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu cũ"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:textColorHint="?attr/colorPrimary"
            app:passwordToggleEnabled="true"
            android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtmatkhaumoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:passwordToggleEnabled="true"
            android:layout_margin="10dp"
            android:textColorHint="?attr/colorPrimary"
            android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtconfirmmatkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Xác nhận mật khẩu mới"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnxacnhandoimatkhau"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Xác nhận"
            android:layout_marginTop="00dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/button_background"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btnhuy"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Hủy"
            android:background="@drawable/button_background"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>